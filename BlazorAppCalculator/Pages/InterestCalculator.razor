    <div class="row">
        <div class="col-md-3">
            <p>Result</p>
        </div>
        <div class="col-md-4">
            <input readonly @bind="@salAfterTax" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <button @onclick="CalculateTax" class="btn btn-dark">Calculate</button>
        </div>
