            </div>
            <div class="col-md-2">
                <button @onclick="DivideNumbers" class="btn btn-info">Divide (/)</button>
            </div>*@
    </div>
</div>


@code {

    string monthlySalary;
    double yearlySalary;
    double yearlyTax;
    string salAfterTax;
    double monthlyTax;

    

    void CalculateTax()
    {
        yearlySalary = Convert.ToDouble(monthlySalary) * 12;
        yearlyTax = (yearlySalary) * 30 / 100;
        monthlyTax = yearlyTax / 12;

        salAfterTax = (Convert.ToDouble(monthlySalary) - monthlyTax).ToString();
    }


}
